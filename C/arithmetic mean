    #include <stdio.h>
    #include <stdbool.h>

    int main()
    {
      int array[30];
      int i=0;
      int j=0;
      int sum = 0;
      int exit=0;

      while (i<30) {
        printf("Enter number: ");
        scanf("%d", &array[i]);
        printf("in print %d\n",array[i]);

        if(array[i]==-1){
            printf("inside if %d\n",array[i]);
            break;
        }
        i++;
      }

      for (j = 0; j < i; j++) {
        sum += array[j];
        }
      printf("Suma de los valores: %d", sum);
      printf("\nTotal valores: %d", i);
      printf("\nMedia: %d", sum/i);
      return 0;
    }
